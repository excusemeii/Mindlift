@page
@model Mindlift.Pages.Forums.EditModel

@{
    ViewData["Title"] = "Edit Forum";
}

@section Styles {
    <style>
        .form-container {
            margin: 30px auto;
            padding: 30px;
            background-color: #e6f7ff; /* Light blue background */
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-group label {
            font-weight: bold;
            color: #1890ff; /* Label color */
        }

        .form-control {
            border: 1px solid #1890ff; /* Light blue border */
            border-radius: 5px;
            padding: 10px;
        }

            .form-control:focus {
                border-color: #1890ff; /* Focus border color */
                box-shadow: 0 0 5px rgba(24, 144, 255, 0.5); /* Focus shadow */
            }

        .text-danger {
            font-size: 0.9em;
            color: #d9534f; /* Error color */
        }

        .btn-primary {
            background-color: #1890ff; /* Primary button color */
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            color: white;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #106bce; /* Darker blue on hover */
            }

        .back-link {
            display: inline-block;
            margin-top: 15px;
            color: #1890ff; /* Back link color */
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .back-link:hover {
                color: #106bce; /* Darker blue on hover */
            }
    </style>
}

<div class="form-container">
    <h2 class="text-center">Edit Forum</h2>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Forum.Id" />

        <div class="form-group">
            <label asp-for="Forum.Title" class="control-label"></label>
            <input asp-for="Forum.Title" class="form-control" />
            <span asp-validation-for="Forum.Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Forum.Description" class="control-label"></label>
            <input asp-for="Forum.Description" class="form-control" />
            <span asp-validation-for="Forum.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Forum.Created" class="control-label"></label>
            <input asp-for="Forum.Created" class="form-control" />
            <span asp-validation-for="Forum.Created" class="text-danger"></span>
        </div>
        <br />

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

    <div class="mt-3">
        <a asp-page="./Index" class="back-link">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
