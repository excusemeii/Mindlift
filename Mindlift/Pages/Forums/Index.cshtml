@page
@model Mindlift.Pages.Forums.IndexModel

@{
    ViewData["Title"] = "Forums";
}

@section Styles {
    <style>
        .section {
            margin-bottom: 50px;
            padding: 30px;
            border-radius: 10px;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.8s ease-out, transform 0.8s ease-out;
        }

        .forum-section {
            background-color: #f0f8ff; /* A softer blue background */
        }

        .table {
            background-color: #ffffff; /* Clean white table */
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Slightly stronger shadow */
        }

            .table th {
                background-color: #0073e6; /* Slightly darker blue for headers */
                color: #ffffff; /* White text for contrast */
                text-align: center;
            }

            .table td {
                vertical-align: middle;
                text-align: center;
                color: #4a4a4a; /* Neutral text color for readability */
            }

        .action-buttons a {
            margin: 0 5px;
            font-weight: 500; /* Slightly bolder for action links */
        }

        .btn-outline-primary, .btn-outline-danger, .btn-outline-secondary {
            border-color: #0073e6; /* Consistent blue border */
            color: #0073e6;
            transition: all 0.3s ease;
        }

            .btn-outline-primary:hover, .btn-outline-danger:hover, .btn-outline-secondary:hover {
                background-color: #0073e6; /* Blue hover effect */
                color: #ffffff; /* White text on hover */
            }

        .create-button {
            background-color: #e63946; /* Red button with improved contrast */
            color: #ffffff;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .create-button:hover {
                background-color: #cc2c3a; /* Slightly darker red on hover */
            }
    </style>

}

<div class="section forum-section">
    <h2 class="text-center mb-4">Forums</h2>

    <!-- Create New Forum Button -->
    <div class="mb-4 text-center">
        <a asp-page="Create" class="create-button">Create New Forum</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forum in Model.Forum)
            {
                <tr>
                    <td>@forum.Title</td>
                    <td>@forum.Description</td>
                    <td>@(forum.Created is DateTime createdDate ? createdDate.ToString("MMMM dd, yyyy") : forum.Created.ToString())</td>
                    <td class="action-buttons">
                        <a asp-page="./Edit" asp-route-id="@forum.Id" class="btn btn-outline-primary btn-sm">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@forum.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        <a asp-page="/Posts/Index" asp-route-forumId="@forum.Id" class="btn btn-outline-secondary btn-sm">View Posts</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const sections = document.querySelectorAll('.section');

            function isInViewport(element) {
                const rect = element.getBoundingClientRect();
                return (
                    rect.top >= 0 &&
                    rect.left >= 0 &&
                    rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
                    rect.right <= (window.innerWidth || document.documentElement.clientWidth)
                );
            }

            function handleScroll() {
                sections.forEach(section => {
                    if (isInViewport(section)) {
                        section.style.opacity = '1';
                        section.style.transform = 'translateY(0)';
                    }
                });
            }

            handleScroll();
            window.addEventListener('scroll', handleScroll);
        });
    </script>
}
