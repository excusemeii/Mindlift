@page
@model Mindlift.Pages.Forums.DetailsModel

@{
    ViewData["Title"] = "Forum Details";
    var forum = Model.Forum;
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/Forums.css" />
</head>

<div class="container details-container">
    <h2 class="text-center page-title">Forum Details</h2>

    <div class="card">
        <h4 class="forum-title">@forum.Title</h4>
        <p class="forum-description">@forum.Description</p>
        <p class="forum-date">
            <i class="far fa-calendar-alt me-2"></i>
            @if (forum.Created is DateTime createdDate)
            {
                @createdDate.ToString("MMMM dd, yyyy")
            }
            else
            {
                @forum.Created.ToString()
            }
        </p>

        <div class="text-center">
            <a asp-page="./Edit" asp-route-id="@forum.Id" class="btn btn-action">
                <i class="fas fa-edit me-1"></i>Edit Forum
            </a>
            <a asp-page="./Index" class="btn btn-back">
                <i class="fas fa-arrow-left me-1"></i>Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const title = document.querySelector('.page-title');
            const card = document.querySelector('.card');

            setTimeout(() => {
                title.style.opacity = '1';
                title.style.transform = 'translateY(0)';
            }, 300);

            setTimeout(() => {
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 500);
        });
    </script>
}
