@page
@model Mindlift.Pages.Forums.DetailsModel

@page "{id:int}"
@model Mindlift.Models.Forum

@{
    ViewData["Title"] = "Forum Details";
    var forum = Model;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .forum-details {
            margin: 20px;
        }
        .user-list {
            list-style-type: none;
            padding: 0;
        }
        .user-item {
            background-color: #f4f4f4;
            margin: 10px 0;
            padding: 15px;
            border-radius: 8px;
        }
        .user-item h4 {
            margin: 0;
        }
        .user-item p {
            margin: 5px 0;
        }
    </style>
</head>
<body>

    <h1>@forum.ForumName</h1>

    <div class="forum-details">
        <h3>Users in this forum:</h3>
        <ul class="user-list">
            @if (forum.Users != null && forum.Users.Any())
            {
                foreach (var user in forum.Users)
                {
                    <li class="user-item">
                        <h4>@user.Username</h4>
                        <p>Email: @user.Email</p>
                        <p>Joined: @user.JoinDate?.ToString("MMMM dd, yyyy")</p>
                    </li>
                }
            }
            else
            {
                <li>No users yet!</li>
            }
        </ul>
    </div>

    <a href="@Url.Page("ForumList")">
        <i class="fas fa-arrow-left"></i> Back to Forum List
    </a>

</body>
</html>

