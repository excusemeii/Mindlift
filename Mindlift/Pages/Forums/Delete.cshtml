@page
@model Mindlift.Pages.Forums.DeleteModel

@{
    ViewData["Title"] = "Delete Forum";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/Forums.css" />
</head>

<div class="delete-forum-container">
    <h1 class="form-heading">Delete Forum</h1>
    <p class="form-subheading">Are you sure you want to delete this forum?</p>

    <div>
        <h4>@Model.Forum.Title</h4>
        <p>@Model.Forum.Description</p>
        <p><strong>Created:</strong> @Model.Forum.Created</p>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Forum.Id" />
        <button type="submit" class="btn-danger">
            <i class="fas fa-trash-alt me-2"></i> Delete Forum
        </button>
    </form>

    <!-- Back Link -->
    <div class="back-link">
        <a asp-page="./Index">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const container = document.querySelector('.delete-forum-container');
            setTimeout(() => {
                container.style.opacity = '1';
                container.style.transform = 'translateY(0)';
            }, 300);
        });
    </script>
}
