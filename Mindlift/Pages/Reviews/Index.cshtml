@page
@model Mindlift.Pages.Reviews.IndexModel

@{
    ViewData["Title"] = "Book Reviews";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reviews</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        .review-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            border: none;
            border-radius: 10px;
            overflow: hidden;
        }

        .review-card:hover {
            transform: scale(1.03);
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }

        .book-image {
            max-height: 300px;
            width: auto;
            margin: 0 auto;
            display: block;
            padding: 10px;
        }

        .review-rating {
            font-weight: bold;
            color: #ffcc00;
            font-size: 1.1rem;
        }

        .review-comment {
            margin: 10px 0;
        }

        .card-footer {
            background-color: #f8f9fa;
            border-top: none;
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <h2 class="text-center mb-4">Reviews</h2>

        <!-- Create New Button -->
        <div class="mb-4 text-center">
            <a asp-page="Create" class="btn btn-outline-primary btn-sm">Create New Review</a>
        </div>

        <div class="row">
            @foreach (var review in Model.Review)
            {
                <div class="col-md-4 mb-4">
                    <div class="card review-card shadow-sm">
                        <!-- Book image -->
                        <img src="https://covers.openlibrary.org/b/isbn/9788820030971-L.jpg" alt="Book cover" class="book-image">
                        
                        <div class="card-body">
                            <p class="review-rating">Rating: &#9733; @review.Rating</p>
                            <p class="review-comment">Comment: @review.Comment</p>
                            <p class="text-muted">Reviewed on: @review.ReviewDate.ToString("MMMM dd, yyyy")</p>
                        </div>

                        <div class="card-footer text-center">
                            <a asp-page="./Edit" asp-route-id="@review.ReviewId" class="btn btn-outline-primary btn-sm">Edit</a>
                            <a asp-page="./Details" asp-route-id="@review.ReviewId" class="btn btn-outline-secondary btn-sm">Details</a>
                            <a asp-page="./Delete" asp-route-id="@review.ReviewId" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
