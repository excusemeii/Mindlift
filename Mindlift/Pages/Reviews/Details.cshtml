@page
@model Mindlift.Pages.Reviews.DetailsModel

@{
    ViewData["Title"] = "Review Details";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .review-card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .book-image {
            max-height: 300px;
            width: auto;
            margin: 0 auto;
            display: block;
            padding: 10px;
        }

        .review-details {
            padding: 20px;
        }

        .details-title {
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 10px;
            text-align: center;
        }

        .details-section dt {
            font-weight: bold;
            margin-top: 1rem;
        }

        .action-buttons {
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="card review-card">
            <!-- Book Image -->
            <img src="https://covers.openlibrary.org/b/isbn/9788820030971-L.jpg" alt="Book cover" class="book-image">

            <!-- Review Details -->
            <div class="review-details">
                <h2 class="details-title">Review Details</h2>
                <hr />
                <dl class="row details-section">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Review.Rating)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Review.Rating)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Review.Comment)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Review.Comment)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Review.ReviewDate)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Review.ReviewDate)
                    </dd>
                </dl>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <a asp-page="./Edit" asp-route-id="@Model.Review." class="btn btn-outline-primary mx-2">Edit</a>
                <a asp-page="./Index">Back to List</a>
            </div>
            <br />
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
