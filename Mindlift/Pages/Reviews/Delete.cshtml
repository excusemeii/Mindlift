@page
@model Mindlift.Pages.Reviews.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Review</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 50px;
        }
        .form-heading {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
            font-weight: 600;
        }
        .form-group label {
            font-weight: 500;
        }
        .btn-primary, .btn-danger {
            padding: 10px 20px;
            font-size: 1.1rem;
        }
        .back-link {
            margin-top: 20px;
            font-size: 1rem;
        }
        .form-group dl {
            margin-bottom: 1.5rem;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="form-heading">Delete Review</h1>
        <h4 class="text-center mb-4">Are you sure you want to delete this review?</h4>

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="form-group mb-3">
                    <h4>Review Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Review.Rating)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Review.Rating)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Review.Comment)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Review.Comment)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Review.ReviewDate)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Review.ReviewDate)
                        </dd>
                    </dl>
                </div>

                <!-- Delete Confirmation Form -->
                <form method="post">
                    <input type="hidden" asp-for="Review.ReviewId" />
                    <div class="form-group mb-3">
                        <input type="submit" value="Delete" class="btn btn-primary w-100" />
                    </div>
                </form>

                <!-- Back Link -->
                <div class="text-center back-link">
                    <a href="@Url.Page("Index")" class="text-muted">Back to Review List</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Adding Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
