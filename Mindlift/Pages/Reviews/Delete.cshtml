@page
@model Mindlift.Pages.Reviews.DeleteModel

@{
    ViewData["Title"] = "Delete Review";
}

<head>
    <link href="~/css/Reviews.css" rel="stylesheet" />
</head>

<div class="delete-review-container">
    <h1 class="form-heading">Delete Review for: <strong>@Model.Review.BookTitle</strong></h1>
    <p class="form-subheading">Are you sure you want to delete this review?</p>

    <div class="review-details">
        <h4>Review Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Review.Rating)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Review.Rating)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Review.Comment)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Review.Comment)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Review.ReviewDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Review.ReviewDate)
            </dd>
        </dl>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Review.ReviewId" />
        <div class="form-group mb-3">
            <button type="submit" class="btn-danger">
                <i class="fas fa-trash me-2"></i>Delete Review
            </button>
        </div>
    </form>

    <div class="back-link">
        <a href="@Url.Page("Index")">
            <i class="fas fa-arrow-left"></i>Back to Review List
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="~/js/Reviews.js"></script>
}
