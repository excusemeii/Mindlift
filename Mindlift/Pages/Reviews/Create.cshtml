@page
@model Mindlift.Pages.Reviews.CreateModel

@{
    ViewData["Title"] = "Create";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Review</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 50px;
        }
        .form-heading {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
            font-weight: 600;
        }
        .form-group label {
            font-weight: 500;
        }
        .form-control {
            border-radius: 0.375rem;
        }
        .btn-primary {
            padding: 10px 20px;
            font-size: 1.1rem;
        }
        .back-link {
            margin-top: 20px;
            font-size: 1rem;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="form-heading">Create Review</h1>
        <h4 class="text-center mb-4">Please fill in the review details below:</h4>

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Rating Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Review.Rating" class="control-label">Rating</label>
                        <input asp-for="Review.Rating" class="form-control" placeholder="Enter rating (1-5)" />
                        <span asp-validation-for="Review.Rating" class="text-danger"></span>
                    </div>

                    <!-- Comment Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Review.Comment" class="control-label">Comment</label>
                        <textarea asp-for="Review.Comment" class="form-control" rows="4" placeholder="Write your comment here..."></textarea>
                        <span asp-validation-for="Review.Comment" class="text-danger"></span>
                    </div>

                    <!-- Review Date Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Review.ReviewDate" class="control-label">Review Date</label>
                        <input asp-for="Review.ReviewDate" class="form-control" type="date" />
                        <span asp-validation-for="Review.ReviewDate" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group mb-3">
                        <input type="submit" value="Create Review" class="btn btn-primary w-100" />
                    </div>
                </form>

                <!-- Back Link -->
                <div class="text-center back-link">
                    <a href="@Url.Page("Index")" class="text-muted">Back to Review List</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Adding Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
