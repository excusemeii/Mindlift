@page
@model Mindlift.Pages.Reviews.EditModel

@{
    ViewData["Title"] = "Edit Review";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Review</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .edit-card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .form-heading {
            text-align: center;
            margin-bottom: 20px;
            font-size: 1.8rem;
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group label {
                font-weight: bold;
            }

            .form-group input,
            .form-group textarea {
                border-radius: 0.375rem;
                padding: 10px;
            }

        .btn-primary {
            padding: 10px 20px;
            font-size: 1rem;
        }

        .back-link {
            margin-top: 20px;
            text-align: center;
        }

            .back-link a {
                font-size: 1rem;
                color: #6c757d;
                text-decoration: none;
            }

                .back-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>
    <div class="container">
        <div class="card edit-card">
            <h1 class="form-heading">Edit Review</h1>

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <form method="post">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Hidden Field for ReviewId -->
                        <input type="hidden" asp-for="Review.ReviewId" />

                        <!-- Rating Input -->
                        <div class="form-group">
                            <label asp-for="Review.Rating" class="control-label">Rating</label>
                            <input asp-for="Review.Rating" class="form-control" />
                            <span asp-validation-for="Review.Rating" class="text-danger"></span>
                        </div>

                        <!-- Comment Input -->
                        <div class="form-group">
                            <label asp-for="Review.Comment" class="control-label">Comment</label>
                            <textarea asp-for="Review.Comment" class="form-control"></textarea>
                            <span asp-validation-for="Review.Comment" class="text-danger"></span>
                        </div>

                        <!-- Review Date Input -->
                        <div class="form-group">
                            <label asp-for="Review.ReviewDate" class="control-label">Review Date</label>
                            <input asp-for="Review.ReviewDate" class="form-control" />
                            <span asp-validation-for="Review.ReviewDate" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group">
                            <input type="submit" value="Save Changes" class="btn btn-primary w-100" />
                        </div>
                    </form>

                    <!-- Back Link -->
                    <div class="back-link">
                        <a asp-page="./Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Adding Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
