@page
@model Mindlift.Pages.WishLists.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Wishlist</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Wishlist.WishlistId" />
            <div class="form-group">
                <label asp-for="Wishlist.UserId" class="control-label"></label>
                <select asp-for="Wishlist.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Wishlist.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wishlist.BookId" class="control-label"></label>
                <select asp-for="Wishlist.BookId" class="form-control" asp-items="ViewBag.BookId"></select>
                <span asp-validation-for="Wishlist.BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wishlist.DateAdded" class="control-label"></label>
                <input asp-for="Wishlist.DateAdded" class="form-control" />
                <span asp-validation-for="Wishlist.DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
