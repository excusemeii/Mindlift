@page "{forumId:int}"
@model Mindlift.Pages.Posts.IndexModel

@{
    ViewData["Title"] = "Posts";
}

@section Styles {
    <style>
        .section {
            margin-bottom: 50px;
            padding: 30px;
            border-radius: 10px;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.8s ease-out, transform 0.8s ease-out;
        }

        .posts-section {
            background-color: #e6f7ff;
        }

        .table {
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #1890ff;
            color: white;
            text-align: center;
        }

        .table td {
            vertical-align: middle;
            text-align: center;
            color: #4a4a4a;
        }

        .action-buttons a {
            margin: 0 5px;
            font-weight: 500;
        }

        .btn-outline-primary, .btn-outline-danger {
            border-color: #1890ff;
            color: #1890ff;
            transition: all 0.3s ease;
        }

        .btn-outline-primary:hover, .btn-outline-danger:hover {
            background-color: #1890ff;
            color: white;
        }

        .create-button {
            background-color: #ff4d4f;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .create-button:hover {
            background-color: #d83436;
        }

        .back-link {
            display: inline-block;
            margin-top: 20px;
            color: #1890ff;
            font-weight: bold;
            transition: color 0.3s ease;
        }

        .back-link:hover {
            color: #0056b3;
        }
    </style>
}

<div class="section posts-section">
    <h2 class="text-center mb-4">Posts in @Model.Forum.Title</h2>

    <!-- Create New Post Button -->
    <div class="mb-4 text-center">
        <a asp-page="Create" asp-route-forumId="@Model.Forum.Id" class="create-button">Create New Post</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>@post.Title</td>
                    <td>@(post.Created is DateTime createdDate ? createdDate.ToString("MMMM dd, yyyy") : post.Created.ToString())</td>
                    <td class="action-buttons">
                        <a asp-page="./Edit" asp-route-id="@post.Id" asp-route-forumId="@Model.Forum.Id" class="btn btn-outline-primary btn-sm">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@post.Id" asp-route-forumId="@Model.Forum.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-page="/Forums/Index" class="back-link">Back to Forums</a>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const sections = document.querySelectorAll('.section');

            function isInViewport(element) {
                const rect = element.getBoundingClientRect();
                return (
                    rect.top >= 0 &&
                    rect.left >= 0 &&
                    rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
                    rect.right <= (window.innerWidth || document.documentElement.clientWidth)
                );
            }

            function handleScroll() {
                sections.forEach(section => {
                    if (isInViewport(section)) {
                        section.style.opacity = '1';
                        section.style.transform = 'translateY(0)';
                    }
                });
            }

            handleScroll();
            window.addEventListener('scroll', handleScroll);
        });
    </script>
}