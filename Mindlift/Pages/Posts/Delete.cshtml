@page
@model Mindlift.Pages.Posts.DeleteModel

@{
    ViewData["Title"] = "Delete Post";
}

<h2>Delete Post in @Model.Forum.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <h4>@Model.Post.Title</h4>
    <p>@Model.Post.Content</p>
    <p><strong>Created:</strong> @Model.Post.Created</p>

    <form method="post">
        @Html.HiddenFor(m => m.Post.Id)
        @Html.HiddenFor(m => m.Post.ForumId)

        <button type="submit" class="btn btn-danger">Delete</button>
    </form>

    <a asp-page="./Index" asp-route-forumId="@Model.Post.ForumId">Cancel</a>
</div>
