@page
@model Mindlift.Pages.Reading.CreateModel

@{
    ViewData["Title"] = "Create Reading Progress";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Create Reading Progress</h1>
    <h4 class="text-center text-muted mb-4">Fill in the details to track your reading progress</h4>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Reading Progress Details</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Start Date -->
                        <div class="form-group">
                            <label asp-for="ReadingProgress.StartDate" class="control-label font-weight-bold">Start Date</label>
                            <input asp-for="ReadingProgress.StartDate" class="form-control" type="date" min="1900-01-01" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="ReadingProgress.StartDate" class="text-danger"></span>
                        </div>

                        <!-- Completion Date -->
                        <div class="form-group">
                            <label asp-for="ReadingProgress.CompletionDate" class="control-label font-weight-bold">Completion Date</label>
                            <input asp-for="ReadingProgress.CompletionDate" class="form-control" type="date" min="@Model.ReadingProgress.StartDate.ToString("yyyy-MM-dd")" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="ReadingProgress.CompletionDate" class="text-danger"></span>
                        </div>

                        <!-- Book Title -->
                        <div class="form-group">
                            <label asp-for="ReadingProgress.BookTitle" class="control-label font-weight-bold">Book Title</label>
                            <input asp-for="ReadingProgress.BookTitle" class="form-control" placeholder="Enter the title of the book" required />
                            <span asp-validation-for="ReadingProgress.BookTitle" class="text-danger"></span>
                        </div>

                        <!-- Completed Checkbox -->
                        <div class="form-group form-check">
                            <input class="form-check-input" asp-for="ReadingProgress.Completed" />
                            <label asp-for="ReadingProgress.Completed" class="form-check-label">Completed</label>
                        </div>

                        <!-- Hidden Fields -->
                        <input type="hidden" asp-for="ReadingProgress.TotalBooksRead" />
                        <input type="hidden" asp-for="ReadingProgress.MilestoneLevel" />

                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Create Progress" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-page="Index" class="btn btn-outline-secondary btn-sm">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
