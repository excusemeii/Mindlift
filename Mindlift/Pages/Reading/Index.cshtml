@page
@model Mindlift.Pages.Reading.IndexModel

@{
    ViewData["Title"] = "Reading Progress Index";
}

<div class="container mt-4">
    <!-- Summary Cards for Key Metrics -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white mb-3">
                <div class="card-header">Total Books Read</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.ReadingProgress.Count()</h5>
                    <p class="card-text">This is the total number of books you have read.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white mb-3">
                <div class="card-header">Books Completed</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.ReadingProgress.Count(r => r.Completed)</h5>
                    <p class="card-text">These are the books you have finished reading.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark mb-3">
                <div class="card-header">Books In Progress</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.ReadingProgress.Count(r => !r.Completed)</h5>
                    <p class="card-text">These are the books you're currently reading.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="d-flex justify-content-between mb-3">
        <div>
            <input type="text" class="form-control form-control-lg" placeholder="Search Reading Progress..." id="searchInput">
        </div>
        <div>
            <a asp-page="Create" class="btn btn-primary btn-lg">Create New</a>
        </div>
    </div>

    <!-- Reading Progress Table with Pagination -->
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Book Name</th>
                <th>@Html.DisplayNameFor(model => model.ReadingProgress[0].StartDate)</th>
                <th>@Html.DisplayNameFor(model => model.ReadingProgress[0].CompletionDate)</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="readingProgressTableBody">
            @foreach (var item in Model.ReadingProgress)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.BookTitle)</td>
                    <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.CompletionDate?.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (item.Completed)
                        {
                            <span class="badge bg-success text-white">Completed</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">In Progress</span>
                        }
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ReadingId" class="btn btn-sm btn-warning" data-toggle="tooltip" title="Edit"><i class="fas fa-edit"></i></a>
                        <a asp-page="./Details" asp-route-id="@item.ReadingId" class="btn btn-sm btn-info" data-toggle="tooltip" title="View Details"><i class="fas fa-info-circle"></i></a>
                        <a asp-page="./Delete" asp-route-id="@item.ReadingId" class="btn btn-sm btn-danger" data-toggle="tooltip" title="Delete" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination Controls -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <span class="page-link">Previous</span>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
</div>

<!-- Scripts for Tooltips and Other UI Enhancements -->
@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        // Enable tooltips for buttons
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });

        // Search functionality (you can implement the search logic based on the table data)
        document.getElementById("searchInput").addEventListener("input", function () {
            let searchQuery = this.value.toLowerCase();
            let rows = document.querySelectorAll("#readingProgressTableBody tr");
            rows.forEach(row => {
                let text = row.innerText.toLowerCase();
                row.style.display = text.includes(searchQuery) ? "" : "none";
            });
        });
    </script>
}
